---
import { proposalData } from "../../content/proposal.js";
---

<section class="free-proposal" data-aos="fade-up" data-aos-once="true">
  <div class="free-proposal__content">
    <h2>{proposalData.title}</h2>
    <p>{proposalData.text}</p>
    <a href={proposalData.buttonUrl} class="btn btn--black">
      {proposalData.buttonText}
    </a>
  </div>
  <div class="free-proposal__img">
    <img src={proposalData.image.src} alt={proposalData.image.alt} />
  </div>
</section>

<style>
  .free-proposal {
    display: flex;
    margin-top: 100px;
    background-color: var(--color-bg-primary);
    border-radius: 45px;
    padding-inline: 60px;
    padding-block: 60px;
    max-height: 350px;
    @media (max-width: 767px) {
      padding: 40px;
    }
  }
  .free-proposal__content {
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 26px;
    @media (max-width: 767px) {
      width: 100%;
    }
  }
  .free-proposal__content h2 {
    font-weight: 500;
    color: var(--color-secondary);
    font-size: 30px;
  }
  .free-proposal__content p {
    text-wrap: balance;
    font-size: 18px;
  }
  .free-proposal__img {
    display: flex;
    width: 50%;
    aspect-ratio: 1;
    scale: 1.6;
    @media (max-width: 767px) {
      display: none;
    }
  }
  .free-proposal__img img {
    width: 150%;
    height: auto;
    object-fit: contain;
  }
</style>
