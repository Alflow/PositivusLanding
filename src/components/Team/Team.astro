---
import { team, teamHeader } from "../../content/team";
import TeamCard from "../Card/TeamCard.astro";
import SectionHeader from "../SectionHeader/SectionHeader.astro";
---

<section id="team">
  <SectionHeader
    title={teamHeader.title}
    text={teamHeader.text}
  />
  <div class="team__grid">
    {
      team.map((item) => (
        <TeamCard
          name={item.name}
          job={item.job}
          img={item.img}
          linkedinUrl={item.linkedinUrl}
          text={item.text}
        />
      ))
    }
  </div>
</section>

<style>
  .team__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
  }
  @media (max-width: 1024px) {
    .team__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 40px;
    }
  }
  @media (max-width: 767px) {
    .team__grid {
      grid-template-columns: repeat(1, 1fr);
      gap: 40px;
    }
  }
</style>
