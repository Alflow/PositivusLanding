---
import { heroContent, heroImages } from "../../content/hero";

// Calculamos la longitud del array de logos para usarla en el CSS
const logosLength = heroImages.logos.length;
---

<section class="hero" data-aos="fade-up" data-aos-once="true">
  <div class="hero-wrapper">
    <div class="hero__container hero__container--left">
      <h1>{heroContent.title}</h1>
      <img
        class="img img--mobile"
        src={heroImages.heroImage.mobile}
        alt={heroImages.heroImage.altText}
      />
      <p>{heroContent.subtitle}</p>
      <a href={heroContent.buttonUrl} class="btn btn--black">
        {heroContent.buttonText}
      </a>
    </div>
    <div class="hero__container hero__container--right">
      <img
        class="img img--desktop"
        src={heroImages.heroImage.desktop}
        alt={heroImages.heroImage.altText}
      />
    </div>
  </div>
  <div class="hero__companies">
    <div class="hero__logos" style={`--logos-length: ${logosLength};`}>
      {
        heroImages.logos.map((logo, index) => (
          <div class="company-logo">
            <img src={logo.imgURL} alt={logo.altText} />
          </div>
        ))
      }
      {
        heroImages.logos.map((logo, index) => (
          <div class="company-logo">
            <img src={logo.imgURL} alt={logo.altText} />
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    margin-top: 70px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    justify-content: space-between;
  }

  .hero-wrapper {
    display: flex;
    justify-content: space-between;
    max-height: 515px;
  }

  .hero__container {
    max-width: 500px;
  }

  .hero__container--right {
    display: flex;
    aspect-ratio: 1;
  }

  .hero__container--right .img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .img--mobile {
    display: none;
  }

  .hero h1 {
    font-size: 60px;
    line-height: normal;
  }

  @media (max-width: 767px) {
    .hero h1 {
      font-size: 43px;
    }
  }

  .hero__container--left {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 30px;
    text-wrap: balance;
  }

  .hero__companies {
    width: 90%;
    max-width: 1920px;
    margin-inline: auto;
    position: relative;
    overflow: hidden;
    height: 100px;
  }

  .hero__companies::before,
  .hero__companies::after {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    width: 50px;
    z-index: 1;
    pointer-events: none;
  }

  .hero__companies::before {
    left: 0;
    background: linear-gradient(
      to right,
      rgba(255, 255, 255, 1),
      rgba(255, 255, 255, 0)
    );
  }

  .hero__companies::after {
    right: 0;
    background: linear-gradient(
      to left,
      rgba(255, 255, 255, 1),
      rgba(255, 255, 255, 0)
    );
  }

  .hero__logos {
    display: flex;
    gap: 40px;
    /* Incluimos el ancho de los logos más el gap en el cálculo */
    width: calc((200px + 40px) * 2 * var(--logos-length));
    animation: scrollLeft 10s linear infinite;
  }

  .company-logo {
    width: 200px;
    height: 100px;
    flex-shrink: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .company-logo img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  @keyframes scrollLeft {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(- ((200px + 40px) * var(--logos-length))));
    }
  }

  @media (max-width: 1024px) {
    .hero__companies {
      margin-top: 45px;
    }
  }

  @media (max-width: 767px) {
    .hero-wrapper {
      flex-direction: column;
      max-height: fit-content;
      margin-bottom: 30px;
    }

    .hero__container--right {
      display: none;
    }

    .img--mobile {
      display: block;
      width: 100%;
    }

    .img--desktop {
      display: none;
    }

    .btn {
      width: 80%;
      margin: 0 auto;
    }

    .hero__companies {
      margin-top: 16px;
    }
  }
</style>
